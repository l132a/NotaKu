<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dimens_2">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_customer"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="@dimen/dimens_5"
        android:src="@drawable/ic_user"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimens_10"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@id/iv_customer"
        app:layout_constraintStart_toEndOf="@id/iv_customer"
        app:layout_constraintTop_toTopOf="@id/iv_customer">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="Agus Supriyanto" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimens_10"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="0812345678" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_1"
        android:layout_marginTop="@dimen/dimens_5"
        android:background="@color/light_transparent"
        app:layout_constraintTop_toBottomOf="@id/iv_customer" />

</androidx.constraintlayout.widget.ConstraintLayout>