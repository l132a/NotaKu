<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dimens_2">


    <View
        android:id="@+id/iv_customer"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="@dimen/dimens_5"
        android:background="@drawable/bg_rounded_skeleton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimens_10"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@id/iv_customer"
        app:layout_constraintStart_toEndOf="@id/iv_customer"
        app:layout_constraintTop_toTopOf="@id/iv_customer">

        <View
            android:id="@+id/tv_name"
            android:layout_width="@dimen/nav_header_height"
            android:layout_height="@dimen/dimens_20"
            android:background="@color/light_transparent" />

        <View
            android:id="@+id/tv_phone"
            android:layout_width="@dimen/bg_header_height"
            android:layout_height="@dimen/dimens_20"
            android:layout_marginTop="@dimen/dimens_10"
            android:background="@color/light_transparent" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_1"
        android:layout_marginTop="@dimen/dimens_5"
        android:background="@color/light_transparent"
        app:layout_constraintTop_toBottomOf="@id/iv_customer" />

</androidx.constraintlayout.widget.ConstraintLayout>